@model IEnumerable<MVCModelAndAnnotationAndValidation.Models.ViewModels.Employee>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <tr>
                    <td colspan="9">Employee List has been retrievied @@ : @DateTime.Now.ToString()</td>
                </tr>
                <tr>
                    <th>Employee Id</th>
                    <th>Employee Name</th>
                    <th>Email Address</th>
                    <th>JoinDate</th>
                    <th>Image</th>
                    <th>Image Name</th>
                    <th>Designation Id</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.EmployeeId)</td>
                        <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>
                            @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.JoinDate))
                        </td>
                        <td>
                            <img src="@Url.Content(item.ImageUrl)" alt="@item.ImageName" width="70" height="70" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.ImageName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DesignationId)</td>
                            
                    </tr>
                }
            </table>                    
        </div>
    </div>
